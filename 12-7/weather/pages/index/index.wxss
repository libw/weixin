}


/*****************  服务  *******************/
.serve-container{
  box-sizing: border-box;
  width:100%;
  height:auto;
  padding:40rpx;
  background:#FAFAFA;
  margin-top:20rpx;
  font-size: 32rpx;
  display:flex;
  justify-content: space-around;
  align-content: center;
  flex-wrap: wrap;
  overflow:hidden;
}
.serve-container .items{
  box-sizing:border-box;
  width:33.33%;
  height:auto;
  margin-bottom:30rpx;
  overflow:hidden;
}
.serve-container .items .pic{
  width:100%;
  height:200rpx;
  overflow:hidden;
}
.serve-container .items .pic img{
  width:100%;
}
.serve-container .items text{
  display: block;
  width:100%;
  text-align: center;
}
.serve-container .items .sub{
  margin:20rpx 0 10rpx 0;
  color:#7C7C7C;
}
.serve-container .items .eval{
  color:#3A3A3A;
}

