.other-container .items{
  box-sizing: border-box;
  float:left;
  width:50%;
  padding:40rpx;
}
.other-container .items .pic{
  display:block;
  width:150rpx;
  height:150rpx;
  /*background:#3A99FF;*/
  margin:0 auto;
  margin-bottom:20rpx;
  border-radius: 50%;
}
.items .left{
  float:left;
  text-align:left;
}
.items .right{
  float:right;
  text-align:right;
}
.items .middle{
  text-align: center;
}
.items .items-title-sub{
  color:#9E9E9E;
  margin-bottom:10rpx;
}

/*边框*/
.wind-items{
  border-right: 1px solid #E8E8EA;
  border-bottom: 1px solid #E8E8EA;
}
.hum-items{
