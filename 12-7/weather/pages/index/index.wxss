/**index.wxss**/

body{
  width:100%;
  background:#F0F0F0;
  overflow-x:hidden;
}

/************  主体部分  *************/
view{
  font-family:microsoft yahei,Arial,Helvetica, sans-serif;
}
.container{
  padding:0;
  background:#F0F0F0;
}
.main-container{
  width:100%;
  height:800rpx;
  position:relative;
}
.main-container swiper{
  width:100%;
  height:100%;
}
.main-container swiper-item{
  width:100%;
  height:100%;
}
.main-section{
  width:500rpx;
  height:400rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
  z-index:10;
  text-align: center;
  color:#fff;
}
.main-section .location{
  font-size:50rpx;
}
.main-section .weather{
  font-size:30rpx;
  margin-top:16rpx;
}
.main-section .temp{
  font-size:150rpx;
}

.main-section .num,.main-section .value{
  display:inline-block;
  margin:0 6rpx;
}

/*图片*/
.main image{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  z-index:0;
}




/************  每天天气  *************/
.day-container{
  box-sizing: border-box;
  width:100%;
  padding: 40rpx 30rpx;
  background:#FAFAFA;
  display:flex;
  justify-content:space-around;
  overflow:hidden;
}
.day-container .day{
  overflow:hidden;
  text-align: center;
}
.day-container .date{
  font-size:30rpx;
  color:#666;
}
.day-container .icon{
  font-size:34rpx;
  color:#666;
  margin:20rpx 0;
}
.day-container .icon image{
  width:100rpx;
  height:100rpx;
}
.day-container .degree{
  font-size:24rpx;
  color:#333;
}

/************  空气质量  *************/
.airvalue-container{
  box-sizing: border-box;
  width:100%;
  height:auto;
  padding: 40rpx;
  background:#FAFAFA;
  margin-top:20rpx;
}

/*********** 左部分 **********/
.airvalue-left{
  float:left;
  width:30%;
  height:20rpx;
  font-size: 34rpx;
  color:#598FEC;
}
.airvalue-left .value{
  margin:10rpx 0;
}
.airvalue-left .num{
  font-size:90rpx;
}

/*********** 右部分 **********/
.airvalue-right{
  float:left;
  width:70%;
}
.airvalue-right .progress-container{
  margin-bottom:30rpx;
}
.progress-container .pm{
  float:left;
  font-size:26rpx;
}
.progress-container .per{
  float:right;
  font-size:26rpx;
}
.progress-container progress{
  width:100%;
  padding-top:10rpx;
}

/** 描述 **/
.airvalue-right .describe{
  font-size:34rpx;
}
.airvalue-right .describe text{
  color:#3A99FF;
  font-size:36rpx;
}


